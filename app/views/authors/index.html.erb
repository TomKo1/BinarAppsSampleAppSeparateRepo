<h1>List of all authors</h1>
    <ul>
        <% @authors.each do |author| %>
            <li>
                <%= link_to author.fullname, author_path(id: author.id)  %>
                <%= link_to 'edit', edit_author_path(id: author.id) %>
                <%= link_to 'delete', author_path(id: author.id), method: :delete, data: {confirm: 'Are you sure?'} %>
            </li>
        <% end %>
    </ul>
    
    <hr />
    <%= link_to 'New author', new_author_path %>