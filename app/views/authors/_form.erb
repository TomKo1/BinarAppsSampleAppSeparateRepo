<%= form_for @author, remote: true, html: { class: 'new-author' }  do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <hr />
    <%= f.label :surname %>
    <%= f.text_field :surname%>
   <hr />
    <%= f.label :age %>
    <%= f.number_field :age %>
    <hr />
    <hr />
    <%= f.submit 'Save'%>
<% end %>






