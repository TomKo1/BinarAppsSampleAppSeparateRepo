.card{style: "width: 18rem;"}
  = image_tag 'rails_logo.png', class: 'img card-img-top', alt: 'Card image top'
  .card-body
    %h5.card-title= post.title
    %p.card-text= post.content
    %p.card-text= localize(post.created_at, format: :long)
    = link_to 'View this post', post_path(id: post.id), class: 'btn btn-primary'